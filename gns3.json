{
   "variables" : {
      "ssh_pass" : "gns3",
      "ssh_name" : "gns3",
      "hostname" : "gns3vm",
      "memory": "2048",
      "disk_size": "20000",
      "data_disk": "100000",
      "iso_checksum_type": "sha256",
      "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
      "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.2-server-amd64.iso",
      "gns3_version": "{{env `GNS3_VERSION`}}"
   },
   "provisioners" : [
      {
         "destination" : "/tmp/config",
         "type" : "file",
         "source" : "config/16.04"
      },
      {
         "destination" : "/tmp/gns3welcome.py",
         "type" : "file",
         "source" : "scripts/welcome.py"
      },
      {
         "type" : "shell",
         "script" : "scripts/setup_ubuntu.sh",
         "execute_command" : "echo  {{user `ssh_name`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
      },
      {
         "type" : "shell",
         "script" : "scripts/provision.sh"
      },
      {
         "destination" : "/home/gns3/.config/GNS3/gns3vm_version",
         "type" : "file",
         "source" : "version"
      },
      {
         "type" : "shell",
         "script" : "scripts/splashscreen.sh"
      },
      {
         "type" : "shell",
         "script" : "scripts/cleaner.sh"
      }
    ],
   "builders" : [
      {
         "type" : "virtualbox-iso",
         "ssh_wait_timeout" : "120m",
         "boot_wait" : "10s",
         "disk_size" : "{{user `disk_size`}}",
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "60m",
         "format": "ova",
         "headless": true,
         "vboxmanage" : [
            [
               "modifyvm",
               "{{.Name}}",
               "--memory",
               "{{user `memory`}}"
            ],
            [
               "modifyvm",
               "{{.Name}}",
               "--cpus",
               "1"
            ],
            [
               "createhd",
               "--format",
               "VDI",
               "--filename",
               "opt.vmdk",
               "--variant",
               "Standard",
               "--size",
               "{{user `data_disk`}}"
            ],
            [
               "storagectl",
               "{{.Name}}",
               "--name",
               "SATA Controller",
               "--add",
               "sata",
               "--controller",
               "IntelAHCI"
            ],
            [
               "storageattach",
               "{{.Name}}",
               "--storagectl",
               "SATA Controller",
               "--port",
               "2",
               "--type",
               "hdd",
               "--medium",
               "opt.vmdk"
            ]
         ],
         "vboxmanage_post" : [
             [
               "modifyvm",
               "{{.Name}}",
               "--nic1",
               "hostonly"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype1",
               "82540EM"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--hostonlyadapter1",
                "vboxnet0"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--nic2",
                "nat"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype2",
               "82540EM"
             ]
         ],
         "http_directory" : "http",
         "vm_name" : "GNS3 VM",
         "ssh_username" : "{{user `ssh_name`}}",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "guest_os_type" : "Ubuntu_64",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command" : [
            "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "/install/vmlinuz",
            " auto",
            " fb=false",
            " initrd=/install/initrd.gz",
            " netcfg/get_domain=vm",
            " netcfg/get_hostname={{user `hostname`}}",
            " netcfg/choose_interface=eth0",
            " debian-installer=en_US auto locale=en_US kbd-chooser/method=us",
            " debconf/frontend=noninteractive",
            " keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA",
            " keyboard-configuration/variant=USA console-setup/ask_detect=false",
            " grub-installer/bootdev=/dev/sda<wait>",
            " noapic",
            " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
            " -- "
         ],
         "guest_additions_mode" : "disable",
         "guest_os_type": "Ubuntu_64",
         "iso_url" : "{{user `iso_url`}}"
      },
      {
         "boot_wait" : "15s",
         "type" : "vmware-iso",
         "disk_size": "{{user `disk_size`}}",
         "disk_additional_size": ["{{user `data_disk`}}"],
         "disk_type_id" : 0,
         "guest_os_type": "ubuntu-64",
         "ssh_wait_timeout" : "120m",
         "vm_name" : "GNS3 VM",
         "vmdk_name": "GNS3 VM",
         "http_directory" : "http",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "ssh_username" : "{{user `ssh_name`}}",
         "vmx_data" : {
            "memsize" : "{{user `memory`}}",
            "cpuid.coresPerSocket" : "1",
            "numvcpus": "1",
            "vhv.enable": "TRUE",
            "ethernet0.present": "TRUE",
            "ethernet0.startConnected": "TRUE",
            "ethernet0.connectionType": "nat",
            "ethernet0.addressType": "generated",
            "ethernet0.generatedAddressOffset": "0",
            "ethernet0.wakeOnPcktRcv": "FALSE",
            "ethernet0.pciSlotNumber": "32"
         },
         "vmx_data_post":
          {
            "ethernet0.connectionType": "hostonly",
            "ethernet1.present": "TRUE",
            "ethernet1.startConnected": "TRUE",
            "ethernet1.connectionType": "nat",
            "ethernet1.addressType": "generated",
            "ethernet1.generatedAddressOffset": "10",
            "ethernet1.wakeOnPcktRcv": "FALSE",
            "ethernet1.pciSlotNumber": "33",
            "ethernet1.virtualDev": "e1000"
         },
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "headless": false,
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "60m",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command" : [
            "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "/install/vmlinuz",
            " auto",
            " fb=false",
            " initrd=/install/initrd.gz",
            " netcfg/get_domain=vm",
            " netcfg/get_hostname={{user `hostname`}}",
            " netcfg/choose_interface=eth0",
            " debian-installer=en_US auto locale=en_US kbd-chooser/method=us",
            " debconf/frontend=noninteractive",
            " keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA",
            " keyboard-configuration/variant=USA console-setup/ask_detect=false",
            " grub-installer/bootdev=/dev/sda<wait>",
            " noapic",
            " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
            " -- ",
            "<enter><wait>"
         ],
         "skip_compaction": true,
         "iso_url" : "{{user `iso_url`}}"
      }
   ]
}
